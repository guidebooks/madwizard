{
  "name": "madwizard",
  "version": "0.19.1",
  "description": "Turn Markdown into Wizards",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "bin": {
    "mw": "./bin/madwizard.js",
    "madwizard": "./bin/madwizard.js"
  },
  "scripts": {
    "lint": "cross-env eslint . --ext .js,.jsx,.ts,.tsx",
    "devhack": "cross-env cp .github/enquirer-index.d.ts node_modules/enquirer/index.d.ts",
    "watch": "npm run devhack && cross-env tsc --build . --watch",
    "build": "npm run devhack && tsc --build .",
    "test": "node --no-warnings dist/test",
    "format": "cross-env prettier --write '**/*.{scss,css,html,js,json,md,ts,tsx}'",
    "format:test:input": "cross-env prettier --write test/inputs",
    "mirror": "T=$(mktemp -d); (cd $T && git clone --depth=1 git@github.com:guidebooks/store.git) && echo \"mirror stage in $T/store\" && ./bin/madwizard.js mirror $T/store/guidebooks $PWD/dist/store",
    "prepack": "npm run build && npm run mirror && npm test && cp src/version.json dist/version.json",
    "prepare": "cross-env husky install"
  },
  "keywords": [
    "markdown",
    "wizard",
    "task graph"
  ],
  "author": "@starpit",
  "license": "Apache-2.0",
  "homepage": "https://github.com/guidebooks/madwizard#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guidebooks/madwizard"
  },
  "bugs": {
    "url": "https://github.com/guidebooks/madwizard/issues"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "eslintIgnore": [
    "dist",
    ".#*",
    "*~"
  ],
  "lint-staged": {
    "**/*.{scss,css,html,js,json,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "printWidth": 120
  },
  "release-it": {
    "plugins": {
      "@release-it/bumper": {
        "out": "src/version.json"
      }
    }
  },
  "devDependencies": {
    "@types/columnify": "^1.5.1",
    "@types/debug": "^4.1.7",
    "@types/hast": "^2.3.4",
    "@types/js-yaml": "^4.0.5",
    "@types/json-diff": "^0.7.0",
    "@types/make-fetch-happen": "^10.0.0",
    "@types/mkdirp": "^1.0.2",
    "@types/needle": "^2.5.3",
    "@types/node": "^18.6.3",
    "@types/tmp": "^0.2.3",
    "@types/unist": "^2.0.6",
    "@types/uuid": "^8.3.4",
    "@types/which": "^2.0.1",
    "@types/write-file-atomic": "^4.0.0",
    "@types/yargs-parser": "^21.0.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.20.0",
    "husky": "^8.0.1",
    "json-diff": "^0.9.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "slash": "^4.0.0",
    "strip-ansi": "^7.0.1",
    "typedoc": "^0.23.9",
    "typedoc-plugin-markdown": "^3.13.4",
    "typescript": "^4.7.4",
    "uvu": "^0.5.6"
  },
  "dependencies": {
    "chalk": "^5.0.1",
    "cli-highlight": "^2.1.11",
    "columnify": "^1.6.0",
    "debug": "^4.3.4",
    "enquirer": "^2.3.6",
    "env-paths": "^2.2.1",
    "expand-home-dir": "^0.0.3",
    "figures": "^4.0.1",
    "front-matter": "^4.0.2",
    "hast-util-raw": "^7.2.2",
    "hast-util-to-mdast": "^8.3.1",
    "hast-util-to-string": "^2.0.0",
    "js-yaml": "^4.1.0",
    "make-fetch-happen": "^10.2.0",
    "mdast-util-to-markdown": "^1.3.0",
    "mkdirp": "^1.0.4",
    "ora": "^6.1.2",
    "remark-directive": "^2.0.1",
    "remark-frontmatter": "^4.0.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "terminal-link": "^3.0.0",
    "tmp": "^0.2.1",
    "to-vfile": "^7.2.3",
    "unified": "^10.1.2",
    "unist-builder": "^3.0.0",
    "unist-util-visit": "^4.1.0",
    "unist-util-visit-parents": "^5.1.0",
    "uuid": "^8.3.2",
    "vfile": "^5.3.4",
    "which": "^2.0.2",
    "write-file-atomic": "^4.0.1",
    "yargs-parser": "^21.0.1"
  }
}

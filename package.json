{
  "name": "madwizard",
  "version": "0.7.4",
  "description": "Turn Markdown into Wizards",
  "source": "src/index.ts",
  "main": "dist/main.mjs",
  "type": "module",
  "types": "dist/types.d.ts",
  "sideEffects": false,
  "bin": {
    "madwizard": "./bin/madwizard.js"
  },
  "scripts": {
    "lint": "cross-env eslint . --ext .js,.jsx,.ts,.tsx",
    "watch": "cross-env concurrently -n CORE,TYPES,TEST 'parcel watch' 'tsc --noEmit --watch' 'cd test && tsc --build . --watch'",
    "build": "cross-env parcel build --no-content-hash",
    "build:test": "cross-env-shell tsc --project test",
    "test": "cross-env npm run build:test && cross-env concurrently --raw -n TYPES,TESTS 'tsc --noEmit' 'node --no-warnings --experimental-specifier-resolution=node test/dist'",
    "format": "cross-env prettier --write '**/*.{scss,css,html,js,json,md,ts,tsx}'",
    "prepack": "npm run build && npm test",
    "prepare": "cross-env husky install"
  },
  "keywords": [
    "markdown",
    "wizard",
    "task graph"
  ],
  "author": "@starpit",
  "license": "Apache-2.0",
  "homepage": "https://github.com/guidebooks/madwizard#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guidebooks/madwizard"
  },
  "bugs": {
    "url": "https://github.com/guidebooks/madwizard/issues"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "eslintIgnore": [
    "dist",
    ".#*",
    "*~"
  ],
  "lint-staged": {
    "**/*.{scss,css,html,js,json,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "printWidth": 120
  },
  "release-it": {
    "plugins": {
      "@release-it/bumper": {
        "out": "src/version.json"
      }
    }
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.5.0",
    "@parcel/transformer-typescript-types": "^2.5.0",
    "@types/debug": "^4.1.7",
    "@types/hast": "^2.3.4",
    "@types/inquirer": "^8.2.1",
    "@types/js-yaml": "^4.0.5",
    "@types/json-diff": "^0.7.0",
    "@types/make-fetch-happen": "^9.0.2",
    "@types/needle": "^2.5.3",
    "@types/node": "^17.0.32",
    "@types/unist": "^2.0.6",
    "@types/uuid": "^8.3.4",
    "@types/which": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.15.0",
    "husky": "^8.0.1",
    "json-diff": "^0.7.4",
    "lint-staged": "^12.4.1",
    "parcel": "^2.5.0",
    "prettier": "^2.6.2",
    "strip-ansi": "^7.0.1",
    "typedoc": "^0.22.15",
    "typedoc-plugin-markdown": "^3.12.1",
    "typescript": "^4.6.4",
    "uvu": "^0.5.3"
  },
  "dependencies": {
    "chalk": "^5.0.1",
    "debug": "^4.3.4",
    "env-paths": "^3.0.0",
    "expand-home-dir": "^0.0.3",
    "figures": "^4.0.1",
    "front-matter": "^4.0.2",
    "hast-util-raw": "^7.2.1",
    "hast-util-to-mdast": "^8.3.1",
    "hast-util-to-string": "^2.0.0",
    "inquirer": "^8.2.4",
    "js-yaml": "^4.1.0",
    "make-fetch-happen": "^10.1.3",
    "mdast-util-to-markdown": "^1.3.0",
    "ora": "^6.1.0",
    "remark-directive": "^2.0.1",
    "remark-frontmatter": "^4.0.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "terminal-link": "^3.0.0",
    "to-vfile": "^7.2.3",
    "unified": "^10.1.2",
    "unist-builder": "^3.0.0",
    "unist-util-visit": "^4.1.0",
    "unist-util-visit-parents": "^5.1.0",
    "uuid": "^8.3.2",
    "vfile": "^5.3.2",
    "which": "^2.0.2"
  }
}
